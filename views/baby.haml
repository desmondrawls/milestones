%h2
  .milestones_title 
    #{@baby.name.capitalize}'s Milestones
  %ul.milestones
    - @milestones.each do |milestone|
      -if achievement = @baby_achievements.first(:milestone_id => milestone.id)
        = haml :milestone, locals: {baby: @baby, milestone: milestone, reached_at: achievement.reached_at}
      -else
        = haml :milestone, locals: {baby: @baby, milestone: milestone, reached_at: nil}
